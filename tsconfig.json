{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "typeRoots": ["./node_modules/@types/", "./types"],
    "types": ["vite/client"],
    "paths": {
      "/@/*": ["./src/*"],
      "/#/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite/**/*.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ]
}
